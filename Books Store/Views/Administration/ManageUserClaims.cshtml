@using Books_Store.Models.ClamisModels;
@model UserClaimsModel
@{
    ViewBag.Title = "Manage User Claims";
}


<form method="post">
    <div class="card">

        <div class="card-header">
            <h3> Add or remove claim for this user</h3>
        </div>

        <div class="card-body">
            <h3>All claims:- </h3>

            @for (int i = 0; i < Model.Cliams.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.UserId" />
                    <input type="hidden" asp-for="@Model.Cliams[i].ClaimType" />
                    <input type="hidden" asp-for="@Model.Cliams[i].ClaimValue" />
                    <input asp-for="@Model.Cliams[i].IsSelected" class="form-check-input" />
                    <label style="color:black;" class="form-check-label" asp-for="@Model.Cliams[i].IsSelected">
                        @Model.Cliams[i].ClaimType
                    </label>
                </div>
            }

        </div>

        <div class="card-footer">
            <button asp-controller="Administration" asp-action="ManageUserClaims" asp-route-userId="@ViewBag.userId" type="submit" class="btn btn-primary">Update</button>

            <a asp-controller="Administration" asp-action="EditUser" asp-route-Id="@ViewBag.userId" class="btn btn-primary">
                Cancel
            </a>
        </div>

    </div>
</form>