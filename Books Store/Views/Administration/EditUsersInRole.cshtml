@using Books_Store.Models.RoleModels
@model List<UserRoleModel>
@{
    ViewBag.Title = "Edit Users in Role";
}

<form method="post">
    <div class="card">

        <div class="card-header">
            <h3> Add or remove users from this role</h3>
        </div>

        <div class="card-body">
            <h3>Users in this role</h3>

            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].UserId" />
                    <input type="hidden" asp-for="@Model[i].UserName" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label style="color:black;" class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].UserName
                    </label>
                </div>
            }

        </div>

        <div class="card-footer">
            <button asp-controller="Administration" asp-action="EditUsersInRole" asp-route-roleId="@ViewBag.roleId"  type="submit" class="btn btn-primary">Update</button>

            <a asp-controller="Administration" asp-action="EditRole" asp-route-Id="@ViewBag.roleId" class="btn btn-primary">
                Cancel
            </a>
        </div>

</div>
</form>