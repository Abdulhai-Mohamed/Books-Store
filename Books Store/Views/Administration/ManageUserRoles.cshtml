@using Books_Store.Models.RoleModels;
@model List<ManageUserRolesModel>
@{
    ViewBag.Title = "Manage User Roles";
}


<form method="post">
    <div class="card">

        <div class="card-header">
            <h3> Add or remove role for this user</h3>
        </div>

        <div class="card-body">
            <h3>All Roles:</h3>

            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label style="color:black;" class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].RoleName
                    </label>
                </div>
            }

        </div>

        <div class="card-footer">
            <button asp-controller="Administration" asp-action="ManageUserRoles" asp-route-userId="@ViewBag.userId" type="submit" class="btn btn-primary">Update</button>

            <a asp-controller="Administration" asp-action="EditUser" asp-route-Id="@ViewBag.userId" class="btn btn-primary">
                Cancel
            </a>
        </div>

    </div>
</form>