@using Books_Store.Models.UserModels;
@model ForgotPasswordModel
@{
    ViewBag.Title = "Forgot Password";
}

<div class="row justify-content-center ">





    <form method="post" enctype="multipart/form-data" asp-controller="Account" asp-action="ForgotPassword" class="  row col-lg-5  col-8 p-5  px-md-0    justify-content-center  ">


        <div class="col-12 text-center mb-5 ">
            <h4>Kindly Insert your Email here</h4>
        </div>


        <div class="col-12">

            <div class="row mb-3  justify-content-evenly">
                <label class="col-md-3  col-sm-12 col-form-label mb-2 mb-md-0" asp-for="Email"></label>
                <div class="col-md-7 col-sm-12 ">
                    <input class="  form-control" asp-for=Email placeholder="Your Email" />
                    <span class="validate-color" asp-validation-for="Email"></span>
                </div>
            </div>


            <div asp-validation-summary="All" class="validate-color"></div>
            <div class="row mb-3  justify-content-evenly">
                <div class=" col-md-3  col-sm-12 col-form-label mb-2 mb-md-0"></div>
                <div class="col-md-7 col-sm-12">
                    <button type="submit" class="btn btn-primary">Send Password Reset Link</button>

                </div>
            </div>

        </div>

    </form>


</div>
